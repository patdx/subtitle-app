{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"verbatimModuleSyntax": true,
		"types": ["vite/client", "node"],
		"noEmit": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "vite.config.ts"]
}
